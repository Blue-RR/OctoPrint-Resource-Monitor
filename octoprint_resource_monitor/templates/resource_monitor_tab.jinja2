<div class="row-fluid">
    <div class="span4">
        <ul class="nav nav-list">
            <li class="active">
                <a href="#resource_monitor_cpu_tab" data-toggle="tab">
                    <div class="row-fluid">
                        <div class="span5">
                            <div id="resource-monitor-mini-cpu" class="resource-monitor-mini-plot"></div>
                        </div>
                        <div class="span7">
                            {{ _("Processor") }}<br/>
                            <small>
                                <span data-bind="text: cpuPercent"></span>% <span data-bind="text: cpuFrequency"></span> GHz
                            </small>
                        </div>
                    </div>
                </a>
            </li>
            <li>
                <a href="#resource_monitor_memory_tab" data-toggle="tab">
                    <div class="row-fluid">
                        <div class="span5">
                            <div id="resource-monitor-mini-memory" class="resource-monitor-mini-plot"></div>
                        </div>
                        <div class="span7">
                            {{ _("Memory") }}<br/>
                            <small>
                                <span data-bind="text: memoryUsed"></span>/<span data-bind="text: memoryTotal"></span> <span data-bind="text: memoryUnit"></span> (<span data-bind="text: memoryPercent"></span>%)
                            </small>
                        </div>
                    </div>
                </a>
            </li>
            {% for partition in plugin_resource_monitor_partitions %}
                <li>
                    <a data-toggle="tab" href="#resource_monitor_disk_{{ loop.index - 1 }}_tab">
                        <div class="row-fluid">
                            <div class="span5">
                                <div class="resource-monitor-mini-plot"></div>
                            </div>
                            <div class="span7">
                                {{ _("Disk") }} {{ loop.index - 1 }} ({{ partition["mountpoint"] }})<br/>
                                <!-- ko with: partitions()[{{ loop.index - 1 }}] -->
                                    <small>
                                        <span data-bind="text: Math.round((used/total)*100)"></span>%
                                    </small>
                                <!-- /ko -->
                            </div>
                        </div>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
    <div class="tab-content span8">
        <div id="resource_monitor_cpu_tab" class="tab-pane active">
            Processor details here
        </div>
        <div id="resource_monitor_memory_tab" class="tab-pane">
            Memory details here
        </div>
        {% for partition in plugin_resource_monitor_partitions %}
            <div id="resource_monitor_disk_{{ loop.index - 1 }}_tab" class="tab-pane">
                Disk {{ loop.index - 1 }} details here
            </div>
        {% endfor %}
    </div>
</div>
